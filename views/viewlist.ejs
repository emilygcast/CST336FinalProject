<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/styles.css">
    <title>View List</title>
</head>
<body>
    <header> 
        <h1>View List</h1>
    </header>
    <br>
    <div class="navbar mb-3">
        <%- include('partials/navbar') %>
    </div>
    <section>
        <ul>
            <% games.forEach(game => { %>
                <li>
                    <strong id="game_id">Game ID:</strong> <%= game.video_game_id %><br>
                    <strong>Game Name:</strong> <%= game.game_name %><br>
                    <strong>Genre:</strong> <%= game.genre %><br>
                    <strong id="addr">Studio:</strong> <%= game.studio_name %><br>
                    
                    <a href="/updateDB?gameid=<%= game.video_game_id %>" class="btn btn-success">Update</a>
                    
                    <!-- Delete Button -->
                    <form action="/deleteGame" method="POST" style="display: inline;">
                        <input type="hidden" name="video_game_id" value="<%= game.video_game_id %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </li>
                <br>
            <% }); %>
        </ul>
    </section>
    
    <%- include('partials/footer') %>
</body>
</html>